<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/style.css" />
    <script src="/socket.io/socket.io.js"></script>    
    <title>Login</title>
  </head>
  <body>
    <%- include("../partials/header.ejs") %>
    <h1>Ingreso de Productos</h1>

    <div style="width: 70%; margin: 0 auto">
      <form onsubmit="return agregarProducto(this)">
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre del Producto</label>
          <input
            type="text"
            class="form-control"
            name="nombre"
            id = "nombre"
            placeholder="Nombre del Producto"
            required
          />
        </div>

        <div class="mb-3">
          <label for="precio" class="form-label">Precio</label>
          <input
            type="number"
            class="form-control"
            name="precio"
            id ="precio"
            placeholder="Precio"
            min="0"
            required
          />
        </div>

        <div class="mb-3">
          <label for="imagen" class="form-label">Imagen</label>
          <input
            type="text"
            class="form-control"
            name="imagen"
            id="imagen"
            placeholder="Imagen del Producto"
            required
          />
        </div>

        <input type="submit" class="btn btn-primary" value="Agregar"></input>
      </form>
      <!-- <div>
        <a
          href="http://localhost:8080/productos"
          class="btn btn-info m-4"
          role="button"
          style="display: block; margin: 0 auto"
          >Productos</a
        >
      </div> -->
    </div>
    <h2>Lista de Productos</h2>
    <div>
      <div id="productos"></div>
    </div>

    <h2>Centro de Mensajes</h2>
    <h3 id="porcentaje"></h3>    
    <div style="width: 70%; margin: 0 auto">
      <form onsubmit="return agregarChat(this)">
        <div class="mb-3">
          <input
            type="email"
            class="form-control"
            name="mail"
            id = "mail"
            placeholder="mail"
            required
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="nombreChat"
            id = "nombreChat"
            placeholder="nombre"
            required
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="apellido"
            id = "apellido"
            placeholder="apellido"
            required
          />
        </div>
        <div class="mb-3">
          <input
            type="number"
            class="form-control"
            name="edad"
            id = "edad"
            placeholder="edad"
            required
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="alias"
            id = "alias"
            placeholder="alias"
            required
          />
        </div>        
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="avatar"
            id = "avatar"
            placeholder="avatar"
            required
          />
        </div>        

        <hr>


        <div id="mensajes">
          
        </div>

        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            name="mensaje"
            id = "mensaje"
            placeholder="Ingrese un mensaje"
            required
          />
        </div>
        <input type="submit" class="btn btn-primary" value="Agregar"></input>
        </form>



    </div>

    <%- include("../partials/footer.ejs") %>
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script src="/js/index.js"></script>
  </body>
</html>
