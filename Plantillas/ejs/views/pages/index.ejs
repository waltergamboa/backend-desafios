<!DOCTYPE html>
<html lang="en">
<head>
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/style.css">
    <title>EJS</title>
</head> 
<body>
  <%- include("../partials/header.ejs") %> 
    <h1>Productos</h1>
    <div class="row">
    <% productos.forEach(item=>{ %> 
        <div class="col-3">
            <div class="card text-black bg-light border-light w-120 m-3">
              <div class="card-header"><%= item.nombre  %></div>
      
              <div class="card-body" style="text-align: center;">
                
                <img src=<%= item.imagen %> style="width: 200px; height: 200px; object-fit: cover;"></img>
                <p class="card-text">
                  $ <%= item.precio %> 
                  
                </p>
              </div>
      
              <div class="card-footer" style="text-align: right">
                <p>
                </p>
              </div>
            </div>
        </div>
    <% }) %> 
</div>
<div>
    <a
      href="http://localhost:8080/ejs"
      class="btn btn-info m-4"
      role="button"
      style="display: block; margin: 0 auto; width: 70%"
      >Agregar Producto</a
    >
  </div>
<%- include("../partials/footer.ejs") %> 

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>