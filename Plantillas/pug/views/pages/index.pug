doctype html 
html(lang="es")
html
    head 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
    link(rel="stylesheet" href="/static/css/style.css")
    title="PUG"
    body
        include ../partials/header.pug
        h1="Productos"
        div(class="row")
            each val in productos
                div(class="col-3")
                 div(class="card text-black bg-light border-light w-120 m-3")
                    div(class="card-header")
                        p=val.nombre
                    div(class="card-body" style="text-align: center;")
                        img(src=val.imagen style="width: 200px; height: 200px; object-fit: cover;")
                        p(class="card-text")="$ " + val.precio
                    div(class="card-footer" style="text-align: right")
        div
            a(href="http://localhost:8080/pug" class="btn btn-info m-4" role="button" style="display: block; margin: 0 auto; width: 70%")="Agregar Producto"
      
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")
    include ../partials/footer.pug