doctype html 
html(lang="es")
html
    head 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
    link(rel="stylesheet" href="/static/css/style.css")
    title="PUG"
    body
        include ../partials/header.pug
        h1="Ingresar Productos"
        div(style="width: 70%; margin: 0 auto")
            form(method="post" action="http://localhost:8080/productos")
                div(class="mb-3")
                label(for="nombre" class="form-label")="Nombre del Producto"
                input(type="text" class="form-control" name="nombre"  placeholder="Nombre del Producto"  required)

                div(class="mb-3")
                label(for="precio" class="form-label")="Precio"
                input(type="number" class="form-control" name="precio" placeholder="Precio" min="0" required)
          
                div(class="mb-3")
                label(for="imagen" class="form-label")="Imagen"
                input(type="text" class="form-control" name="imagen" placeholder="Imagen del Producto" required)

                button(type="submit" class="btn btn-primary mt-3")="Agregar"
        div
            a(href="http://localhost:8080/pug/productos" class="btn btn-info m-4" role="button" style="display: block; margin: 0 auto; width: 70%")="Productos"
      
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")
    include ../partials/footer.pug